<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ScrollView01"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:scrollbars="vertical">
<LinearLayout
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent">

    <!--Put form controls here-->
    <TextView
        android:id="@+id/TextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calibrate_title"
        android:textSize="10pt">
    </TextView>
    <EditText
        android:id="@+id/focal_mm"
        android:layout_height="wrap_content"
        android:hint="@string/focal_mm"
        android:inputType="number"
        android:layout_width="fill_parent">
    </EditText>
    <EditText
        android:id="@+id/sensor_width_mm"
        android:layout_height="wrap_content"
        android:hint="@string/sensor_width_mm"
        android:inputType="number"
        android:layout_width="fill_parent">
    </EditText>
    <Button
        android:id="@+id/ButtonSendForm"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:onClick="sendForm"
        android:layout_width="fill_parent">
    </Button>
</LinearLayout>
</ScrollView>
